# Bochs配置文件

# 机器内存: 64MB
megs: 64

# 对应真实机器的bios
romimage: file=/home/gufeijun/work/software/bochs/share/bochs/BIOS-bochs-latest
# 对应真实机器的VGA bios
vgaromimage: file=/home/gufeijun/work/software/bochs/share/bochs/VGABIOS-lgpl-latest

# 启动方式
boot: disk

# 关闭鼠标
mouse: enabled=0

# 硬盘设置
ata0: enabled=1, ioaddr1=0x1f0, ioaddr2=0x3f0, irq=14
ata0-master: type=disk, path="boot.img", mode=flat, cylinders=121, heads=16, spt=63
